{ "manifest_version": 2
, "name": "Beastify"
, "version": "1.0"

, "description": "Adds button that does stuff"
, "icons": {"48": "resources/icons/beasts-48.png"}

, "permissions":
    [ "activeTab"
    ]

, "browser_action":
    { "default_icon": "resources/icons/beasts-32.png"
    , "default_title": "Beastify"
    , "default_popup": "popup/choose_beast.html"
    }

, "web_accessible_resources":
    [ "resources/beasts/frog.jpg"
    , "resources/beasts/turtle.jpg"
    , "resources/beasts/snake.jpg"
    ]
}
